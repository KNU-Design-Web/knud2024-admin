{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
